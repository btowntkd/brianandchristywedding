@model BrianChristyWedding.Models.RsvpSearchViewModel

@{
    ViewBag.Title = "RSVP";
}
<h2>RSVP</h2>

<p>Please enter your Invitation code and click 'Find'</p>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x => x.Shortcode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(x => x.Shortcode, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-1">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offet-2">@Html.ValidationMessageFor(x => x.Shortcode, "", new { @class = "text-danger" })</div>
        </div>
    </div>
}
