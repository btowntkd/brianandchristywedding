@model BrianChristyWedding.Models.Invitation

@{
    ViewBag.Title = "RSVP";
}

<h2>RSVP</h2>

@if (Model == null)
{
    <h3>Invitation code not found</h3>
    <p>Please check your code and try again.</p>
    <p>
        @Html.TextBox("textShortcode")
        <input type="button" id="submitShortcode" value="Submit" />
    </p>
    <script type="text/javascript">
    $("#submitShortcode").click(function () {
        window.location.href = "/Rsvp/" + $("#textShortcode").val();
    });
    </script>
}
else
{
    <h3>Welcome, @Model.Name!</h3>
}


